<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_estate"
    tools:context=".registration_page">

    <EditText
        android:id="@+id/Name"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="86dp"
        android:background="#f0f0ff"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#0E0E0E"
        android:textColorHint="#121111"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/address"
        android:layout_width="218dp"
        android:layout_height="42dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="56dp"
        android:background="#f0f0ff"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="#0B0A0A"
        android:textColorHint="#1B1919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <EditText
        android:id="@+id/username"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="76dp"
        android:background="#f0f0ff"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:textColor="#100F0F"
        android:textColorHint="#0E0E0E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="214dp"
        android:layout_height="38dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="192dp"
        android:background="#f0f0ff"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textColor="#1E1C1C"
        android:textColorHint="#1E1D1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="213dp"
        android:layout_height="37dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="72dp"
        android:background="#f0f0ff"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#201F1F"
        android:textColorHint="#232121"
        app:layout_constraintBottom_toTopOf="@+id/phone"
        app:layout_constraintEnd_toEndOf="@+id/phone" />
</androidx.constraintlayout.widget.ConstraintLayout>